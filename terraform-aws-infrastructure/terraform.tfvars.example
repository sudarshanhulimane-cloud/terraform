# Example Terraform Variables File
# Copy this file to terraform.tfvars and customize the values

# General Configuration
aws_region   = "us-west-2"
project_name = "my-aws-project"
environment  = "dev"

common_tags = {
  Project     = "My AWS Project"
  Environment = "dev"
  ManagedBy   = "Terraform"
  Owner       = "DevOps Team"
}

# Networking Configuration
vpc_cidr                = "10.0.0.0/16"
public_subnet_cidrs     = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs    = ["10.0.10.0/24", "10.0.20.0/24"]
enable_nat_gateway      = true
enable_vpn_gateway      = false

# Security Configuration
allowed_ssh_ips = ["YOUR_IP_ADDRESS/32"]  # Replace with your actual IP

# Compute Configuration
key_pair_name         = "my-key-pair"  # Create this key pair in AWS first
bastion_instance_type = "t3.micro"
app_instance_type     = "t3.medium"
app_min_size          = 1
app_max_size          = 5
app_desired_capacity  = 2

# Load Balancer Configuration
ssl_certificate_arn = ""  # Optional: ARN of your SSL certificate

# EKS Configuration
kubernetes_version         = "1.28"
node_group_instance_types  = ["t3.medium"]
node_group_capacity_type   = "ON_DEMAND"
node_group_scaling_config = {
  desired_size = 2
  max_size     = 5
  min_size     = 1
}

# Database Configuration
db_engine            = "postgres"
db_engine_version    = "15.4"
db_instance_class    = "db.t3.micro"
db_allocated_storage = 20
db_name              = "myappdb"
db_username          = "dbadmin"
db_password          = "ChangeMePlease123!"  # Use a secure password
db_multi_az          = false
db_backup_retention  = 7

# DNS Configuration
domain_name = ""  # Optional: your domain name for Route 53